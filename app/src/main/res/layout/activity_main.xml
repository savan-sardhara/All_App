                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/btndialogintent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text="Go To Activity" />


