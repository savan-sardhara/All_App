                    android:text="Go To Activity" />


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView1000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12. Auto complete"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/btnAutocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Go To Activity" />

            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/textView011"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
